<body>

<header>
  <h1>Daily Quote & Notes</h1>
</header>

<main>
  <div class="quote" id="quote"></div>
  <div class="author" id="author"></div>
  <textarea id="notes" placeholder="Write your notes for today..."></textarea>
  <button onclick="saveNotes()">Save Notes</button>
  <div class="saved-message" id="saved-msg" style="display:none;">Notes saved!</div>
</main>

<script>
  const quotes = [
    {text: "The only way to do great work is to love what you do.", author: "Steve Jobs"},
    {text: "Believe you can and you're halfway there.", author: "Theodore Roosevelt"},
    {text: "Do what you can, with what you have, where you are.", author: "Theodore Roosevelt"},
    {text: "You miss 100% of the shots you don't take.", author: "Wayne Gretzky"},
    {text: "Start where you are. Use what you have. Do what you can.", author: "Arthur Ashe"},
    {text: "Success is not the key to happiness. Happiness is the key to success.", author: "Albert Schweitzer"},
    {text: "Hardships often prepare ordinary people for an extraordinary destiny.", author: "C.S. Lewis"},
    // ... add more quotes here, ideally at least 30 for more variety
  ];

  // Get the current date string as YYYY-MM-DD
  function getDateString() {
    const d = new Date();
    return d.toISOString().split('T')[0];
  }

  // Select quote of the day based on date
  function getQuoteOfTheDay() {
    const day = new Date().getDate();
    // Rotate through quotes array based on day number
    return quotes[day % quotes.length];
  }

  // Load and display quote
  function loadQuote() {
    const q = getQuoteOfTheDay();
    document.getElementById('quote').textContent = `"${q.text}"`;
    document.getElementById('author').textContent = `- ${q.author}`;
  }

  // Load saved notes from localStorage for today
  function loadNotes() {
    const key = 'dailyNotes-' + getDateString();
    const saved = localStorage.getItem(key);
    if(saved !== null) {
      document.getElementById('notes').value = saved;
    }
  }

  // Save notes to localStorage with today's date key
  function saveNotes() {
    const key = 'dailyNotes-' + getDateString();
    const notes = document.getElementById('notes').value;
    localStorage.setItem(key, notes);
    const msg = document.getElementById('saved-msg');
    msg.style.display = 'block';
    setTimeout(() => {
      msg.style.display = 'none';
    }, 2000);
  }

  // Initial load
  loadQuote();
  loadNotes();
</script>

</body>
</html>
